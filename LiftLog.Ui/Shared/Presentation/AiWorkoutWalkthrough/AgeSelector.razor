@inject IJSRuntime Js

<LabelledFormRow Label="How old are you?" Icon="cake">
    <TextField TextFieldType=TextFieldType.Outline type="text" inputmode="numeric" Value="@(Value.ToString())" required OnChange="@(value => OnChanged(value))"/>
</LabelledFormRow>

@code {


    [Parameter] [EditorRequired] public Action<int> OnAgeSelect { get; set; } = null!;

    [Parameter] [EditorRequired] public int Value { get; set; }

    private void OnChanged(string? value)
    {
        if (value != null && int.TryParse(value, out var result))
        {
            OnAgeSelect(result);
        }
    }

}
