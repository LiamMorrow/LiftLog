{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "lib": ["ESNext"],
    "module": "ESNext",
    "noUnusedParameters": false,
    "paths": {
      "@/*": ["./*"]
    },
    "exactOptionalPropertyTypes": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "tolgee.d.ts"
  ]
}
